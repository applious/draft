#!/usr/bin/env coffee

path = require 'path'

argv = require('optimist')
  .usage('Usage: applious- $0 --port=[8000] [path]')
  .default('port', 8000)
  .alias('port', 'p')
  .argv

cwd = argv._[0] or process.cwd()

unless path.existsSync(cwd)
  console.error "Does not exist: #{cwd}"
  return

app = require('../app')(port: argv.port, cwd: cwd)
